    -->
   <!-- <if test='fs.equals("name")'>
     WHERE name LIKE '%'||#{ss}||'%'
   </if>
   <if test='fs.equals("subject")'>
     WHERE subject LIKE '%'||#{ss}||'%'
   </if>
   <if test='fs.equals("content")'>
     WHERE content LIKE '%'||#{ss}||'%'
   </if> -->
   <!-- <choose>
    <when test='fs=="name"'>
     WHERE name LIKE '%'||#{ss}||'%'
    </when>
    <when test='fs=="subject"'>
